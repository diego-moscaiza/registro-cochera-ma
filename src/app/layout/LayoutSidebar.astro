---
import NavBarSidebar from "../navbar/NavBarSidebar.astro";
import SideBar from "../sidebar/SideBar.astro";

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es-ES">
	<head>
		<meta charset="UTF-8" />
		<title>{title}</title>
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<meta name="generator" content={Astro.generator} />
		<link rel="icon" type="image/svg+xml" href="/carreta.svg" />
		<script src="../../themes/darkMode.ts"></script>
	</head>
	<body
		class:list={[
			"bg-stone-50 dark:bg-slate-900 dark:text-neutral-100",
			"scrollbar scrollbar-w-3 scrollbar-thumb-rounded-[0.25rem]",
			"scrollbar-track-slate-200  scrollbar-thumb-gray-400",
			"dark:scrollbar-track-gray-900 dark:scrollbar-thumb-gray-700",
		]}
	>
		<NavBarSidebar />
		<SideBar />
		<div class="flex pt-16 overflow-hidden bg-stone-50 dark:bg-slate-900">
			<div
				id="main-content"
				class:list={[
					"relative w-full h-full min-h-screen overflow-y-auto lg:ml-64",
					"bg-stone-50 dark:bg-slate-900",
				]}
			>
				<slot />
			</div>
		</div>
	</body>
</html>
