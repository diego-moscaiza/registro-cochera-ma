<aside
	id="sidebar"
	class:list={[
		"fixed top-0 left-0 z-20",
		"w-64 h-full pt-16 font-normal",
		"flex flex-col flex-shrink-0",
		"transition-transform duration-300 -translate-x-full lg:translate-x-0",
	]}
	aria-label="Sidebar"
>
	<div
		class:list={[
			"relative min-h-0 pt-0",
			"flex flex-col flex-1",
			"border-r bg-white border-gray-200 dark:bg-slate-900 dark:border-slate-700",
		]}
	>
