					</a>
				</div>
			</section>
		</div>
	</div>
</aside>

<script>
	function getFullHourToday() {
		return new Date().toLocaleTimeString([], {
			hour: "2-digit",
			minute: "2-digit",
			second: "2-digit",
			hour12: true,
		});
	}

	function getFullDayToday() {
		return new Date().toLocaleDateString([], {
			weekday: "long",
			day: "2-digit",
			month: "long",
			year: "numeric",
		});
	}

	document.addEventListener("DOMContentLoaded", () => {
		const updateDateTime = () => {
			const fullHourElement = document.getElementById("fullHourToday");
			if (fullHourElement) {
				fullHourElement.textContent = getFullHourToday();
			}

			const fullDayElement = document.getElementById("fullDayToday");
			if (fullDayElement) {
				fullDayElement.textContent = getFullDayToday();
			}
		};

		updateDateTime();
		setInterval(updateDateTime, 1000);
	});

	document.addEventListener("DOMContentLoaded", function () {
		const sidebar: any = document.getElementById("sidebar");
		const toggleSidebarMobileEl: any = document.getElementById(
			"toggleSidebarMobile",
		);
		const sidebarBackdrop: any = document.getElementById("sidebarBackdrop");
		const toggleSidebarMobileHamburger: any = document.getElementById(
			"toggleSidebarMobileHamburger",
		);
		const toggleSidebarMobileClose: any = document.getElementById(
			"toggleSidebarMobileClose",
		);

		// Toggle Sidebar
		const toggleSidebar = () => {
			sidebar.classList.toggle("-translate-x-full");
			sidebarBackdrop.classList.toggle("hidden");
			toggleSidebarMobileHamburger.classList.toggle("hidden");
			toggleSidebarMobileClose.classList.toggle("hidden");
		};

		toggleSidebarMobileEl?.addEventListener("click", toggleSidebar);
		sidebarBackdrop?.addEventListener("click", toggleSidebar);
	});
</script>
