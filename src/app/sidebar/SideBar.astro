<script>
	let fullHourToday;
	let fullDayToday;
	function getFullHourToday() {
		return new Date().toLocaleTimeString([], {
			hour: "2-digit",
			minute: "2-digit",
			second: "2-digit",
			hour12: true,
		});
	}

	function getFullDayToday() {
		return new Date().toLocaleDateString([], {
			weekday: "long",
			day: "2-digit",
			month: "long",
			year: "numeric",
		});
	}

	document.addEventListener("DOMContentLoaded", () => {
		const updateDateTime = () => {
			const fullHourElement = document.getElementById("fullHourToday");
			fullHourElement
				? (fullHourToday = fullHourElement.textContent = getFullHourToday())
				: null;

			const fullDayElement = document.getElementById("fullDayToday");
			fullDayElement
				? (fullDayToday = fullDayElement.textContent = getFullDayToday())
				: null;
		};

		updateDateTime();
		setInterval(updateDateTime, 1000);
	});
</script>

